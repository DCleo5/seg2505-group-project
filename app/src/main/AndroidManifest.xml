<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utaste">

    <application
        android:allowBackup="true"
        android:label="uTaste"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.utaste.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.utaste.ui.admin.AdminHomeActivity" />
        <activity android:name="com.utaste.ui.chef.ChefHomeActivity" />
        <activity android:name="com.utaste.ui.waiter.WaiterHomeActivity" />
    </application>
</manifest>
